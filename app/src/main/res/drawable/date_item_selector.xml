<!-- res/drawable/date_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#FFDDA2"/> <!-- Yellow color when selected -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Transparent color when not selected -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
